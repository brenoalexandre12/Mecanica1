    {
      "cell_type": "code",
      "source": [
        "while True: # loop infinito\n",
        "\n",
        "    resposta = input(\"Deseja realizar a soma de 2 variaveis? (S/N): \").strip().upper() # pergunta ao usuario se ele deseja realizar a soma\n",
        "\n",
        "    if resposta == \"S\": # verifica se a resposta é sim\n",
        "        var1 = float(input(\"Digite o primeiro valor: \")) # solicita o primeiro valor\n",
        "        var2 = float(input(\"Digite o segundo valor: \")) # solicita o segundo valor\n",
        "\n",
        "        soma = var1 + var2 # realiza a soma\n",
        "\n",
        "        print(f\"A soma dos valores é: {soma:.2f}\\n\") # exibe a soma\n",
        "\n",
        "    elif resposta == 'N': # verifica se a resposta é não\n",
        "        print(\"operação finalizada.\") # informa que a operação foi finalizada\n",
        "        break # sai do loop\n",
        "\n",
        "    else: # caso a resposta seja diferente de sim ou não\n",
        "        print(\"Resposta inválida, por favor, digite 'S' para Sim ou 'N' para Não.\\n\") # solicita ao usuario que digite novamente"
